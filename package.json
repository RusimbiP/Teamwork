{
  "name": "server",
  "version": "1.0.0",
  "description": "Teamwork is an ​internal social network for organizations’ employees. ",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint",
    "prestart": "npm run -s build",
    "start": "node dist/start.js",
    "dev": "nodemon --exec babel-node server/start.js",
    "clean": "rimraf dist ",
    "build": "npm run clean && mkdir  dist && babel server -s -D -d dist",
    "test": "nyc --reporter=html --reporter=text mocha --timeout 10000 --require @babel/register ./server/tests --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RusimbiPatrick/Teamwork.git"
  },
  "author": "Rusimbi Patrick",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RusimbiPatrick/Teamwork/issues"
  },
  "homepage": "https://github.com/RusimbiPatrick/Teamwork#readme",
  "dependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "jsonwebtoken": "^8.5.1",
    "rimraf": "^2.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.15.1",
    "eslint-plugin-react-hooks": "^1.7.0",
    "mocha": "^6.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1"
  }
}
